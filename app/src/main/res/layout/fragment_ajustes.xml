<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

        <TextView
            android:id="@+id/txtvAjustes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/ajustes"
            android:textColor="#000000"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="back"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/txtvNotiInsercion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_baseline_phone_android_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawablePadding="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:text="Notificaci칩n de inserci칩n"
                    android:textColor="#757373"
                    android:textSize="20sp"
                    app:drawableTint="#FF0000"
                    app:drawableTintMode="screen" />

                <TextView
                    android:id="@+id/txtvCuentasVinc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_baseline_home_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawablePadding="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:text="Cuentas Vinculadas"
                    android:textColor="#757373"
                    android:textSize="20sp"
                    app:drawableTint="#FF0000"
                    app:drawableTintMode="screen" />

                <TextView
                    android:id="@+id/txtvBloquearCuentas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_baseline_favorite_border_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawablePadding="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:text="Bloquear Cuentas"
                    android:textColor="#757373"
                    android:textSize="20sp"
                    app:drawableTint="#FF0000"
                    app:drawableTintMode="screen" />

                <TextView
                    android:id="@+id/txtvCambiaContra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_baseline_phone_android_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawablePadding="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:text="Cambia la contrase침a"
                    android:textColor="#757373"
                    android:textSize="20sp"
                    app:drawableTint="#FF0000"
                    app:drawableTintMode="screen" />

                <TextView
                    android:id="@+id/txtvConfPrivacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_baseline_home_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawablePadding="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:text="La configuraci칩n de privacidad"
                    android:textColor="#757373"
                    android:textSize="20sp"
                    app:drawableTint="#FF0000"
                    app:drawableTintMode="screen" />

                <TextView
                    android:id="@+id/txtvIdioma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_baseline_favorite_border_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawablePadding="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:text="Idioma"
                    android:textColor="#757373"
                    android:textSize="20sp"
                    app:drawableTint="#FF0000"
                    app:drawableTintMode="screen" />

                <TextView
                    android:id="@+id/txtvDesconectar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawablePadding="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:text="Desconectar"
                    android:textColor="#757373"
                    android:textSize="20sp"
                    app:drawableTint="#FF0000"
                    app:drawableTintMode="screen" />

                <TextView
                    android:id="@+id/txtvModoOscuro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Modo oscuro"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtvHabilitarModoOscuro"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="18dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Habilitar modo oscuro"
                            android:textColor="#757373"
                            android:textSize="18sp" />

                        <Switch
                            android:id="@+id/switchModoOscuro"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="125dp"
                            android:layout_marginTop="15dp" />

                </LinearLayout>

        </LinearLayout>

</RelativeLayout>