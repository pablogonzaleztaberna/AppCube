<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECE4E4">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Sobre mí"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Implementación de tecnologías para almacenar datos modificables basados en específicos de tecnologías para almacenar datos basados en específicos para almacenar datos basados en datos basados en específicos de específicos."
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Fotos"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="170dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dos"
                android:layout_marginStart="6dp"/>

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tres"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_marginTop="275dp">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tres"
                android:layout_marginStart="6dp"/>

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dos"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tres"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPublicacionesPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="370dp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>