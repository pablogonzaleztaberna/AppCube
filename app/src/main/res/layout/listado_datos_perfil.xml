<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECE4E4">


        <FrameLayout
            android:layout_width="375dp"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="30dp"
                app:srcCompat="@drawable/ic_baseline_grid_view_24"
                app:tint="#CFCACA" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/ic_baseline_person_24"
                app:tint="#CFCACA" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/ic_baseline_chat_24"
                app:tint="#CFCACA" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/ic_baseline_favorite_border_24"
                app:tint="#CFCACA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numPublicaciones"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="76"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numSeguidores"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="22"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numComentarios"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="166"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numGustos"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="1.2k"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:text="PUBLICACIONES"
            android:textColor="#CFCACA" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            android:text="SEGUIDOR"
            android:textColor="#CFCACA" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:text="COMENTARIOS"
            android:textColor="#CFCACA" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:text="GUSTOS"
            android:textColor="#CFCACA" />
        </LinearLayout>
        </FrameLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Sobre mí"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="125dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Implementación de tecnologías para almacenar datos modificables basados en específicos de tecnologías para almacenar datos basados en específicos para almacenar datos basados en datos basados en específicos de específicos."
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Fotos"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="280dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_marginTop="310dp">

            <ImageView
                android:id="@+id/foto1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dos"
                android:layout_marginStart="6dp"/>

            <ImageView
                android:id="@+id/foto2"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/foto3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tres"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/foto4"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_marginTop="380dp">

            <ImageView
                android:id="@+id/foto5"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tres"
                android:layout_marginStart="6dp"/>

            <ImageView
                android:id="@+id/foto6"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dos"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/foto7"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/foto8"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tres"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="460dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_margin="20dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/imgvPerfil"
                android:src="@drawable/ic_baseline_person_2_24"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="eduardo kelly"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Hace 2 horas" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="65dp"
                android:text="Implementación de tecnologías para almacenar datos inalterables en base a datos específicos."
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgvPost"
                android:src="@drawable/dos"
                android:layout_width="350dp"
                android:layout_height="280dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="125dp"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:id="@+id/imgvLike"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:tint="#D82562"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/numLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="15dp"
                android:text="1124"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgvComment"
                android:src="@drawable/ic_baseline_comment_24"
                android:tint="#AFA8AB"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="115dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/numComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="155dp"
                android:layout_marginBottom="15dp"
                android:text="77"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgvReport"
                android:src="@drawable/ic_baseline_brightness_high_24"
                android:tint="#AFA8AB"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/numReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="15dp"
                android:text="56"
                android:textColor="#000000"
                android:textSize="16sp" />
        </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>